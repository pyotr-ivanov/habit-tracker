<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:textAlignment="center">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:navGraph="@navigation/mobile_navigation" />

    <ProgressBar
        android:id="@+id/pbHabbit1"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:max="30"
        android:progress="0"
        app:layout_constraintEnd_toStartOf="@+id/lbHabits"
        app:layout_constraintTop_toBottomOf="@+id/lbHabits" />

    <TextView
        android:id="@+id/lbHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Habits"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="lbHabits" />

    <TextView
        android:id="@+id/lbnHabit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Habit 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/pbHabbit1"
        app:layout_constraintStart_toStartOf="@+id/pbHabbit1"
        app:layout_constraintTop_toBottomOf="@+id/pbHabbit1"
        tools:text="lbnHabit1" />

    <Button
        android:id="@+id/btHabit1"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="42dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/pbHabbit1"
        app:layout_constraintStart_toStartOf="@+id/pbHabbit1"
        app:layout_constraintTop_toBottomOf="@+id/pbHabbit1" />

    <TextView
        android:id="@+id/lbProgressHabit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pbHabbit1"
        app:layout_constraintEnd_toEndOf="@+id/pbHabbit1"
        app:layout_constraintStart_toStartOf="@+id/pbHabbit1"
        app:layout_constraintTop_toTopOf="@+id/pbHabbit1" />

    <TextView
        android:id="@+id/lbGoalHabit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="30"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pbHabbit1"
        app:layout_constraintEnd_toEndOf="@+id/pbHabbit1"
        app:layout_constraintStart_toEndOf="@+id/lbProgressHabit1"
        app:layout_constraintTop_toTopOf="@+id/pbHabbit1" />

    <Button
        android:id="@+id/btReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="@+id/lbHabits"
        app:layout_constraintStart_toStartOf="@+id/lbHabits"
        app:layout_constraintTop_toBottomOf="@+id/lbHabits"
        tools:text="btReset" />

    <ProgressBar
        android:id="@+id/pbHabit2"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:max="30"
        android:progress="0"
        app:layout_constraintStart_toEndOf="@+id/lbHabits"
        app:layout_constraintTop_toBottomOf="@+id/lbHabits" />

    <TextView
        android:id="@+id/lbnHabit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Habit 2"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/pbHabit2"
        app:layout_constraintStart_toStartOf="@+id/pbHabit2"
        app:layout_constraintTop_toBottomOf="@+id/pbHabit2"
        tools:text="lbnHabit2" />

    <Button
        android:id="@+id/btHabit2"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="42dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/pbHabit2"
        app:layout_constraintStart_toStartOf="@+id/pbHabit2"
        app:layout_constraintTop_toBottomOf="@+id/pbHabit2" />

    <TextView
        android:id="@+id/lbProgressHabit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pbHabit2"
        app:layout_constraintEnd_toEndOf="@+id/pbHabit2"
        app:layout_constraintStart_toStartOf="@+id/pbHabit2"
        app:layout_constraintTop_toTopOf="@+id/pbHabit2" />

    <TextView
        android:id="@+id/lbGoalHabit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="30"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pbHabit2"
        app:layout_constraintEnd_toEndOf="@+id/pbHabit2"
        app:layout_constraintStart_toEndOf="@+id/lbProgressHabit2"
        app:layout_constraintTop_toTopOf="@+id/pbHabit2" />

</androidx.constraintlayout.widget.ConstraintLayout>